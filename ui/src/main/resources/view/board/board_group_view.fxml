<?import atlantafx.base.controls.Spacer?>
<?import io.xeres.ui.custom.ImageSelectorView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" prefHeight="290.0" prefWidth="400.0" minHeight="-Infinity" minWidth="-Infinity" styleClass="base-spacing" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="io.xeres.ui.controller.board.BoardGroupWindowController">
    <GridPane hgap="8" vgap="8">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="10.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="ALWAYS"/>
            <RowConstraints vgrow="ALWAYS"/>
            <RowConstraints vgrow="ALWAYS"/>
        </rowConstraints>
        <Label text="%name"/>
        <TextField fx:id="boardName" promptText="%board.create.name.prompt" GridPane.columnIndex="1">
            <tooltip>
                <Tooltip showDuration="1m" maxWidth="300" wrapText="true" text="%board.create.name.tip"/>
            </tooltip>
        </TextField>
        <Label text="%board.create.description" GridPane.rowIndex="1"/>
        <TextField fx:id="boardDescription" promptText="%board.create.description.prompt" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <tooltip>
                <Tooltip showDuration="1m" maxWidth="300" wrapText="true" text="%board.create.description.tip"/>
            </tooltip>
        </TextField>
        <Label text="%board.create.logo" GridPane.rowIndex="2"/>
        <HBox GridPane.rowIndex="2" GridPane.columnIndex="1">
            <ImageSelectorView fx:id="boardLogo" fitWidth="128" fitHeight="128" placeholder="mdi2i-image"/>
            <Spacer/>
        </HBox>
    </GridPane>
    <Region VBox.vgrow="ALWAYS"/>
    <ProgressBar fx:id="progressBar" styleClass="small, progress-wait" prefWidth="Infinity" minHeight="4.0" visible="false"/>
    <HBox alignment="TOP_RIGHT">
        <Button fx:id="createOrUpdateButton" defaultButton="true" disable="true" minWidth="72.0" mnemonicParsing="false" text="%create">
            <HBox.margin>
                <Insets right="4.0"/>
            </HBox.margin>
        </Button>
        <Button fx:id="cancelButton" cancelButton="true" minWidth="72.0" mnemonicParsing="false" text="%cancel">
            <HBox.margin>
                <Insets left="4.0"/>
            </HBox.margin>
        </Button>
    </HBox>
</VBox>

