<?import atlantafx.base.controls.Spacer?>
<?import io.xeres.ui.custom.asyncimage.AsyncImageView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<VBox fx:id="groupView" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" styleClass="board-cell">
    <HBox>
        <Label text="Posted by"/>
        <Label text=" "/>
        <Label fx:id="authorLabel"/>
        <Label text=" on "/>
        <Label fx:id="postInstantLabel"/>
        <ToggleButton fx:id="unreadButton" styleClass="small-toggle">
            <HBox.margin>
                <Insets left="8.0"/>
            </HBox.margin>
            <graphic>
                <FontIcon iconLiteral="mdi2e-email"/>
            </graphic>
            <tooltip>
                <Tooltip showDuration="1m" maxWidth="300" wrapText="true" text="Mark as read/unread"/>
            </tooltip>
        </ToggleButton>
    </HBox>
    <TextFlow fx:id="titleFlow" styleClass="title-4"/>
    <TextFlow fx:id="contentFlow" managed="false"/>
    <StackPane alignment="CENTER_LEFT">
        <Spacer minHeight="80"/>
        <AsyncImageView fx:id="imageView" managed="false"/>
    </StackPane>
</VBox>
