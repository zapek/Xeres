<?import io.xeres.ui.custom.asyncimage.AsyncImageView?>
<?import io.xeres.ui.custom.DisclosedHyperlink?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="groupView" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" styleClass="board-cell">
    <HBox>
        <Label text="Posted by"/>
        <Label text=" "/>
        <Label fx:id="authorLabel"/>
        <Label text=" on "/>
        <Label fx:id="postInstantLabel"/>
    </HBox>
    <HBox fx:id="titleGroup">
        <Label fx:id="titleLabel" styleClass="title-4"/>
        <DisclosedHyperlink fx:id="linkView" styleClass="title-4"/>
    </HBox>
    <AsyncImageView fx:id="imageView" managed="false"/>
</VBox>
