<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root prefHeight="480" prefWidth="640" type="VBox" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <HBox styleClass="flat-toolbar">
        <VBox.margin>
            <Insets bottom="4.0" top="4.0"/>
        </VBox.margin>
        <Button fx:id="bold" focusTraversable="false">
            <graphic>
                <FontAwesomeIconView glyphName="BOLD" glyphSize="14"/>
            </graphic>
            <tooltip>
                <Tooltip showDuration="1m" text="%editorview.action.bold"/>
            </tooltip>
        </Button>
        <Button fx:id="italic" focusTraversable="false">
            <graphic>
                <FontAwesomeIconView glyphName="ITALIC" glyphSize="14"/>
            </graphic>
            <tooltip>
                <Tooltip showDuration="1m" text="%editorview.action.italic"/>
            </tooltip>
        </Button>
        <Button fx:id="hyperlink" focusTraversable="false">
            <HBox.margin>
                <Insets left="8.0"/>
            </HBox.margin>
            <graphic>
                <FontAwesomeIconView glyphName="LINK" glyphSize="14"/>
            </graphic>
            <tooltip>
                <Tooltip showDuration="1m" text="%editorview.action.hyperlink"/>
            </tooltip>
        </Button>
        <Button fx:id="quote" focusTraversable="false">
            <graphic>
                <FontAwesomeIconView glyphName="QUOTE_LEFT" glyphSize="14"/>
            </graphic>
            <tooltip>
                <Tooltip showDuration="1m" text="%editorview.action.quote"/>
            </tooltip>
        </Button>
        <Button fx:id="code" focusTraversable="false">
            <graphic>
                <FontAwesomeIconView glyphName="CODE" glyphSize="14"/>
            </graphic>
            <tooltip>
                <Tooltip showDuration="1m" text="%editorview.action.code"/>
            </tooltip>
        </Button>
        <Button fx:id="list" focusTraversable="false">
            <HBox.margin>
                <Insets left="8.0"/>
            </HBox.margin>
            <graphic>
                <FontAwesomeIconView glyphName="LIST" glyphSize="14"/>
            </graphic>
            <tooltip>
                <Tooltip showDuration="1m" text="%editorview.action.list"/>
            </tooltip>
        </Button>
        <Button fx:id="heading" focusTraversable="false">
            <graphic>
                <FontAwesomeIconView glyphName="HEADER" glyphSize="14"/>
            </graphic>
            <tooltip>
                <Tooltip showDuration="1m" text="%editorview.action.header"/>
            </tooltip>
        </Button>
    </HBox>
    <TextArea fx:id="editor" wrapText="true" VBox.vgrow="SOMETIMES"/>
</fx:root>
