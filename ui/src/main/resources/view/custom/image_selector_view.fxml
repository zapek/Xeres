<?import io.xeres.ui.custom.asyncimage.AsyncImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<fx:root type="StackPane" xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml">
    <AsyncImageView fx:id="imageView"/>
    <Button fx:id="selectButton" text="%image-selector-view.change-image" opacity="0.0" styleClass="small" StackPane.alignment="CENTER"/>
    <Button fx:id="deleteButton" opacity="0.0" styleClass="flat, small, danger, button-circle" StackPane.alignment="TOP_RIGHT">
        <graphic>
            <FontIcon iconLiteral="mdi2c-close-circle"/>
        </graphic>
    </Button>
</fx:root>
