<?import io.xeres.ui.custom.InputArea?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<fx:root type="HBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <Button fx:id="addMedia" styleClass="button-icon, flat, accent">
        <graphic>
            <FontIcon iconLiteral="mdi2p-paperclip"/>
        </graphic>
        <tooltip>
            <Tooltip maxWidth="300" wrapText="true" showDuration="1m" text="%messaging.send.file"/>
        </tooltip>
    </Button>
    <InputArea fx:id="inputArea" promptText="%messaging.prompt" VBox.vgrow="NEVER" HBox.hgrow="ALWAYS"/>
    <Button fx:id="addSticker" styleClass="button-icon, flat, accent">
        <graphic>
            <FontIcon iconLiteral="mdi2s-sticker-emoji"/>
        </graphic>
        <tooltip>
            <Tooltip maxWidth="300" wrapText="true" showDuration="1m" text="%messaging.send-sticker"/>
        </tooltip>
    </Button>
    <Button fx:id="callButton" styleClass="button-icon, flat, accent" visible="false" managed="false">
        <graphic>
            <FontIcon iconLiteral="mdi2p-phone"/>
        </graphic>
        <tooltip>
            <Tooltip maxWidth="300" wrapText="true" showDuration="1m" text="%messaging.action.call"/>
        </tooltip>
    </Button>
</fx:root>