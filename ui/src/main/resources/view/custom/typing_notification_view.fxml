<?import io.xeres.ui.custom.WaveDotsView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.HBox?>
<fx:root type="HBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <ProgressIndicator fx:id="progressIndicator" prefWidth="16.0" prefHeight="16.0" managed="false">
        <HBox.margin>
            <Insets right="4.0"/>
        </HBox.margin>
    </ProgressIndicator>
    <Label fx:id="text"/>
    <WaveDotsView alignment="BOTTOM_LEFT" fx:id="waveDotsView" visible="false">
        <HBox.margin>
            <Insets left="1.0" bottom="10.0"/><!-- not sure why I need the bottom margin -->
        </HBox.margin>
    </WaveDotsView>
</fx:root>
