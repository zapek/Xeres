<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox spacing="4.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.xeres.ui.controller.file.FileDownloadViewController">
    <padding>
        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
    </padding>
    <TableView fx:id="downloadTableView" VBox.vgrow="ALWAYS">
        <placeholder>
            <Label text="No downloads"/>
        </placeholder>
        <columns>
            <TableColumn fx:id="tableName" prefWidth="180.0" text="Name"/>
            <TableColumn fx:id="tableState" prefWidth="120.0" text="State"/>
            <TableColumn fx:id="tableProgress" prefWidth="140.0" text="Progress"/>
            <TableColumn fx:id="tableTotalSize" prefWidth="100.0" text="Total Size"/>
            <TableColumn fx:id="tableHash" prefWidth="280.0" text="Hash"/>
        </columns>
    </TableView>
</VBox>
