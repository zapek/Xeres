<?import atlantafx.base.controls.Spacer?>
<?import io.xeres.ui.custom.asyncimage.AsyncImageView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<VBox alignment="CENTER" minHeight="160.0" minWidth="200.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.xeres.ui.controller.voip.VoipWindowController" styleClass="base-spacing">
    <StackPane VBox.vgrow="ALWAYS">
        <VBox alignment="CENTER">
            <AsyncImageView fx:id="imageView" fitWidth="128" fitHeight="128"/>
            <Label fx:id="nameLabel" styleClass="title-1"/>
            <Label fx:id="statusLabel" styleClass="title-4"/>
            <Label fx:id="timerLabel" visible="false"/>
        </VBox>
    </StackPane>
    <HBox>
        <Button fx:id="answerButton" text="Answer" styleClass="success" visible="false">
            <graphic>
                <FontIcon iconLiteral="mdi2p-phone"/>
            </graphic>
        </Button>
        <Spacer HBox.hgrow="ALWAYS"/>
        <Button fx:id="rejectButton" text="Reject" styleClass="danger" visible="false">
            <graphic>
                <FontIcon iconLiteral="mdi2p-phone-hangup"/>
            </graphic>
        </Button>
    </HBox>
</VBox>
